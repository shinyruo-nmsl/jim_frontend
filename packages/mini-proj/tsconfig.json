{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "outDir": "lib",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"] // @将映射到src目录
    },
    "rootDir": "."
  },
  "include": ["./src", "./types"],
  "compileOnSave": false
}
